<div class="container-fluid d-flex justify-content-center align-items-start vh-100" style="background-color: #e8f5e9;">
  <div class="row w-100">
    <div class="col-md-5" style="height: 97vh; margin-top: 10px; margin-bottom: 10px;">
      <div class=".bg-light p-4 rounded shadow-lg" style="border: 1px solid #c8e6c9; height: 100%; overflow-y: auto;">
        <h2 class="h4 font-weight-bold mb-4 text-center" style="color: #2e7d32;">Student List</h2>
        <ul class="list-group">
          <% Student.all.each do |student| %>
            <li class="list-group-item">
              <%= student.name %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>

    <div class="col-md-5 d-flex justify-content-center align-items-center" style="margin-top: 10px; margin-bottom: 10px; margin-left: 20px;">
      <div class=".bg-light p-5 rounded shadow-lg d-flex flex-column justify-content-center align-items-center" style="max-width: 700px; height: 70%; width: 100%; border: 1px solid #c8e6c9;">

        <h2 class="h4 font-weight-bold mb-4 text-center" style="color: #2e7d32;">Create a Student</h2>

        <%= form_with model: @student, local: true, class: "needs-validation" do |form| %>
          <div class="form-group mt-3">
            <%= form.label :name, "Student Name", class: "form-label font-weight-semibold", style: "color: #388e3c;" %>
            <%= form.text_field :name, placeholder: 'Enter student name', class: "form-control form-control-lg rounded-3 shadow-sm border-light", style: "background-color: #f1f8e9;" %>
            <% @student.errors.full_messages_for(:name).each do |message| %>
              <div class="text-danger small"><%= message %></div>
            <% end %>
          </div>

          <div class="form-group mt-4">
            <%= form.submit "Create Student", class: "btn w-100 py-2 rounded-3 shadow-sm", style: "background-color: #43a047; color: white; font-weight: bold; border: none;" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>