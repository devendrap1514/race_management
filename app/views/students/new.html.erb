<div class="d-flex justify-content-center align-items-center vh-100 bg-light">
  <div class="bg-white p-5 rounded shadow-lg w-100" style="max-width: 500px;">
    <% if flash[:alert] %>
      <div class="alert alert-danger" role="alert">
        <%= flash[:alert] %>
      </div>
    <% end %>

    <h2 class="h4 font-weight-bold mb-4 text-center text-dark">Create a Student</h2>

    <%= form_with model: @student, local: true, class: "needs-validation" do |form| %>
      <div class="form-group mt-3">
        <%= form.label :name, "Student Name", class: "form-label" %>
        <%= form.text_field :name, placeholder: 'Student name', class: "form-control form-control-lg" %>
      </div>

      <div class="form-group mt-4">
        <%= form.submit "Create Student", class: "btn btn-primary w-100 py-2" %>
      </div>
    <% end %>
  </div>
</div>
